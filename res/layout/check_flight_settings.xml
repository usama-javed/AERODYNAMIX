<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Time since last check (mm:ss)"
            android:textColor="#000" />

        <Button
            android:id="@+id/check_flight_bt"
            android:layout_width="wrap_content"
            android:background="@drawable/back_button"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:text="Check Flight"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/check_flight_bt"
            android:text="1:15"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_flight_bt"
            android:layout_marginTop="10dip"
            android:text="5 planes checked in."
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/five_planes_checked_in_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/check_flight_bt"
            android:layout_marginTop="10dip"
            android:text="OK"
            android:textColor="#00ff00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dip"
            android:text="All have same #in flight 5."
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/all_same_flight_5_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dip"
            android:text="OK"
            android:textColor="#00ff00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="10dip"
            android:text="5 unique values for my position found."
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/five_unique_values_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="10dip"
            android:text="OK"
            android:textColor="#00ff00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/error1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dip"
            android:text="Error, Position 2 has VIC formation. Master has line abreast. "
            android:textColor="#ff0000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/error2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error1"
            android:layout_marginTop="10dip"
            android:text="Error, Position 5 has different sentences from Master."
            android:textColor="#ff0000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error2"
            android:layout_marginTop="10dip"
            android:text="All times are in sync"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/all_times_sync_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/error2"
            android:layout_marginTop="10dip"
            android:text="OK"
            android:textColor="#00ff00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dip"
            android:text="All have the same start time"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/all_times_same_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dip"
            android:text="OK"
            android:textColor="#00ff00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView7"
            android:layout_marginRight="30dip"
            android:layout_marginTop="30dip"
            android:text="Wifi"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wifi_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="10dip"
            android:text="Wifi Name"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>