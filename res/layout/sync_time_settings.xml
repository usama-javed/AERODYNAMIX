<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Master"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/master_sync_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_toRightOf="@+id/textView1" />

        <Button
            android:id="@+id/get_time_from_master_bt"
            android:layout_width="wrap_content"
            android:layout_height="90dip"
            android:layout_below="@+id/textView1"
            android:background="@drawable/back_button"
            android:layout_marginTop="15dip"
            android:text="Get Time from Master"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get_time_from_master_bt"
            android:layout_marginTop="10dip"
            android:text="Current system Time"
            android:textColor="#000" />

        <TextView
            android:id="@+id/current_sys_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:text="12:15:01.000"
            android:textColor="#000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_sys_time_text"
            android:text="Last time sync with master"
            android:textColor="#000" />

        <TextView
            android:id="@+id/last_time_sync_with_master_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:text="12:15:01.000"
            android:textColor="#000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/last_time_sync_with_master_text"
            android:text="Advance my system time (10 ms)"
            android:textColor="#000" />

        <Button
            android:id="@+id/beep_test_bt"
            android:layout_width="90dip"
            android:layout_height="60dip"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="10dip"
            android:background="@drawable/back_button"
            android:text="Beep Test"
            android:textColor="#000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/time_plus_bt"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:background="@drawable/back_button"
            android:layout_marginTop="10dip"
            android:layout_toLeftOf="@+id/time_minus_bt"
            android:text="+"
            android:textColor="#000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/time_minus_bt"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dip"
            android:layout_below="@+id/textView4"
            android:background="@drawable/back_button"
            android:layout_marginTop="10dip"
            android:text="-"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/time_minus_bt"
            android:layout_marginTop="20dip"
            android:text="Amount of change from master (ms)"
            android:textColor="#000" />

        <TextView
            android:id="@+id/amount_of_change_from_master_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_minus_bt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dip"
            android:text="000"
            android:textColor="#000"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_of_change_from_master_text"
            android:layout_marginTop="10dip"
            android:text="Wifi"
            android:textColor="#000" />

        <TextView
            android:id="@+id/wifi_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dip"
            android:text="Wifi Name"
            android:textColor="#000"
            android:textSize="25sp" />
    </RelativeLayout>

</ScrollView>